{
  "name": "@thesis-co/cent-docs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "copy-docs": "tsx scripts/copy-package-docs.ts",
    "dev": "pnpm run copy-docs && next dev",
    "build": "pnpm run copy-docs && next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
